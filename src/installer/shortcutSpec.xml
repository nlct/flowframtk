<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<izpack:shortcuts version="5.0" xmlns:izpack="http://izpack.org/schema/shortcuts" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://izpack.org/schema/shortcuts http://izpack.org/schema/5.0/izpack-shortcuts-5.0.xsd">

  <skipIfNotSupported/>
  <programGroup defaultName="DickimawBooks\FlowframTk"
                location="startMenu"/>
  <shortcut
    name="FlowframTk"
    target="$JAVA_HOME\bin\javaw.exe"
    commandLine="-jar &quot;$INSTALL_PATH\lib\flowframtk.jar&quot;"
    workingDirectory="$INSTALL_PATH"
    description="LaTeX-Friendly Vector Graphics Application With Support for flowfram.sty"
    iconFile="$INSTALL_PATH\lib\icons\flowframtk.ico"
    iconIndex="0"
    initialState="normal"
    programGroup="yes"
    desktop="yes"
    applications="no"
    startMenu="no"
    startup="no">

    <createForPack name="Base"/>
  </shortcut>

  <shortcut
    name="JDRView"
    description="JDR/AJR image file viewer"
    target="$JAVA_HOME\bin\javaw.exe"
    commandLine="-splash:&quot;$INSTALL_PATH\lib\icons\flowframtklogolarge.png&quot; -jar &quot;$INSTALL_PATH\lib\jdrview.jar&quot;"
    workingDirectory="$INSTALL_PATH"
    iconFile="$INSTALL_PATH\lib\icons\flowframtk.ico"
    iconIndex="0"
    initialState="normal"
    programGroup="yes"
    desktop="yes"
    applications="no"
    startMenu="no"
    startup="no">

    <createForPack name="Base"/>
  </shortcut>

  <shortcut
    name="FlowframTk Uninstaller"
    programGroup="yes"
    desktop="no"
    applications="no"
    startMenu="no"
    startup="no"
    target="$INSTALL_PATH\Uninstaller\uninstaller.jar"
    commandLine=""
    iconFile="%SystemRoot%\system32\SHELL32.dll"
    iconIndex="31"
    description="Uninstall FlowframTk ${project.version}"
    initialState="noShow"
  >

    <createForPack name="Base"/>
  </shortcut>

  <shortcut
    name="FlowframTk Documentation"
    programGroup="yes"
    desktop="no"
    applications="no"
    startMenu="no"
    startup="no"
    target="$INSTALL_PATH\doc\flowframtk-en-GB.pdf"
    commandLine=""
    encoding="UTF-8"
    iconFile="%SystemRoot%\system32\SHELL32.dll"
    iconIndex="23"
    description="FlowframTk ${project.version} user manual (PDF format)">

    <createForPack name="Docs en-GB"/>
  </shortcut>


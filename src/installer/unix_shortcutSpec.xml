<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<izpack:shortcuts version="5.0" xmlns:izpack="http://izpack.org/schema/shortcuts" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://izpack.org/schema/shortcuts http://izpack.org/schema/5.0/izpack-shortcuts-5.0.xsd">

  <programGroup defaultName="Graphics"
  location="applications"/>

  <shortcut
     name="FlowframTk"
     programGroup="yes"
     applications="no"
     desktop="yes"
     target="$INSTALL_PATH/bin/flowframtk"
     commandLine=""
     workingDirectory=""
     description="LaTeX-Friendly Vector Graphics Application With Support for flowfram.sty"
     iconFile="$INSTALL_PATH/lib/icons/flowframtklogosmall.png"
     iconIndex="0"
     type="Application"
     terminal="false"
     KdeSubstUID="false"
     initialState="normal">
     <createForPack name="Base"/>
   </shortcut>

  <shortcut
     name="JDRview"
     programGroup="yes"
     applications="no"
     desktop="yes"
     target="$INSTALL_PATH/bin/jdrview"
     commandLine=""
     workingDirectory=""
     description="JDR/AJR image file viewer"
     iconFile="$INSTALL_PATH/lib/icons/flowframtklogosmall.png"
     iconIndex="0"
     type="Application"
     terminal="false"
     KdeSubstUID="false"
     initialState="normal">
     <createForPack name="Base"/>
   </shortcut>

